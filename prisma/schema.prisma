generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  phone       String
  password    String
  secretToken String    @unique @default("")
}

model Document {
  id                Int       @id @default(autoincrement())
  category          String
  cnpj_contratante  String
  contracted_value  String
  initial_validity  String
  duration          String?
  contratante       String
  contratada        String
  secretToken       String
}

